/* main.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: top;
  justify-content: top;
  height: 400rpx;
  background-color:  #33a3dc;
  border-radius: 10rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.wxinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}
.buttongroup {
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
  margin-top: 150rpx;
}

.wxlogin {
  margin-left: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.student-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20px;
  border-radius: 10rpx;
  
}
.info-label {
  font-size: 16px;
  font-weight: bold;
  margin-right: 5px;
}
.info-value {
  font-size: 16px;
  margin-right: 20rpx;
}
.headimage{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.item {
  display: flex;
  padding: 30rpx;
  background: white;
  align-items: center;
  border-bottom: 1px solid gray;
  border-radius: 10rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.right_arrow {
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 4px;
  position: absolute;
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
.openbutton{
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: left;
  padding: 0px;
  margin: 0px;
  line-height: 1.3;
  font-size: 16px;
  border-radius: 10rpx;
  
}