<view class="container">
  <image class="logo" src="/images/logo.jpg"></image>
  <view class="form-container">
    <view class="horizontal">
      <text class="label">账号</text>
      <input class="input" type="text" value="{{ account }}" bindinput="handleAccountInput" placeholder="请输入账号"></input>
    </view>
    <view class="horizontal">
      <text class="label">密码</text>
      <input class="input" type="text"  value="{{ password }}" bindinput="handlePasswordInput" placeholder="请输入密码"></input>
    </view>
    <view class="horizontal">
      <text class="label">确认</text>
      <input class="input" type="text" value="{{ passwordagain }}" bindinput="handlePasswordAgainInput" placeholder="请输入密码"></input>
    </view>
    <button class="login-button" bindtap="register">注册</button>
  </view>
</view>